<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCDBEF"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/image"
            android:layout_width="235dp"
            android:layout_height="235dp"
            android:layerType="software"
            app:neomorph_view_type="circular"
            android:layout_centerHorizontal="true"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="5dp"
            app:neomorph_corner_radius="32dp"
            app:neomorph_background_color="#fff"
            app:neomorph_shadow_color="#408AB1"
            app:neomorph_highlight_color="#fff"
            android:layout_marginTop="53dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:src="@drawable/education_online"></ImageView>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <TextView
            android:id="@+id/text"
            android:layout_below="@id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn anything you \nwant easily..."
            android:textColor="#001D3B"
            android:textStyle="italic"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp"></TextView>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/button"
            android:layout_below="@id/text"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layerType="software"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="12dp"
            app:neomorph_corner_radius="32dp"
            app:neomorph_background_color="#fff"
            app:neomorph_shadow_color="#408AB1"
            app:neomorph_highlight_color="#fff"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_bg">

                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    app:neomorph_view_type="rectangular"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_elevation="0dp"
                    app:neomorph_corner_radius="32dp"
                    app:neomorph_background_color="#BCDBEF"
                    app:neomorph_shadow_color="#BCDBEF"
                    app:neomorph_highlight_color="#BCDBEF"
                    android:layout_margin="5dp">

                    <Button
                        android:id="@+id/continue_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"
                        android:text="Continue"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textStyle="normal"
                        android:textSize="17dp"></Button>
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            </RelativeLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    </RelativeLayout>
</ScrollView>