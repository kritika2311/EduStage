<?xml version="1.0" encoding="utf-8"?>
<com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layerType="software"
    app:neomorph_view_type="rectangular"
    app:neomorph_shadow_type="outer"
    app:neomorph_elevation="3dp"
    app:neomorph_corner_radius="15dp"
    app:neomorph_background_color="#BCDBEF"
    app:neomorph_shadow_color="#408AB1"
    app:neomorph_highlight_color="#fff"
    android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_bg"
        android:padding="5dp">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layerType="software"
            app:neomorph_background_color="#BCDBEF"
            app:neomorph_corner_radius="32dp"
            app:neomorph_elevation="4dp"
            app:neomorph_highlight_color="#fff"
            app:neomorph_shadow_color="#408AB1"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="circular">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/expert_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/user"></de.hdodenhof.circleimageview.CircleImageView>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <TextView
            android:id="@+id/expert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert Name"
            android:textColor="#001D3B"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"></TextView>

        <LinearLayout
            android:id="@+id/desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expert_name"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="15sp"
                android:textColor="#637e96"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ years of Experience."
                android:textSize="15sp"
                android:textColor="#637e96"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc1"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upto "
                android:textSize="15sp"
                android:textColor="#637e96"
                android:layout_marginLeft="1dp"></TextView>

            <TextView
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="15sp"
                android:textColor="#637e96"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ members"
                android:textSize="15sp"
                android:textColor="#637e96"></TextView>
        </LinearLayout>

        <TextView
            android:layout_below="@id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="received advice till now."
            android:textSize="15sp"
            android:textColor="#637e96"
            android:layout_marginLeft="140dp"></TextView>
    </RelativeLayout>
</com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>