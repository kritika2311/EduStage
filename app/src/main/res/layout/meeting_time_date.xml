<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCDBEF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/setMeeting_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Meeting"
                android:textColor="#001D3B"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"></TextView>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/backto_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layerType="software"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_type="outer"
                app:neomorph_elevation="5dp"
                app:neomorph_corner_radius="28dp"
                app:neomorph_background_color="#BCDBEF"
                app:neomorph_shadow_color="#408AB1"
                app:neomorph_highlight_color="#fff"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/left_arrow"></ImageView>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </RelativeLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/card1"
            android:layout_below="@id/setMeeting_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layerType="software"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="5dp"
            app:neomorph_corner_radius="10dp"
            app:neomorph_background_color="#BCDBEF"
            app:neomorph_shadow_color="#408AB1"
            app:neomorph_highlight_color="#fff"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg">

                <TextView
                    android:id="@+id/choose_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meeting Date"
                    android:textColor="#2F5373"
                    android:textSize="25dp"
                    android:fontFamily="@font/clearsans_bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"></TextView>

                <TextView
                    android:id="@+id/text"
                    android:layout_below="@id/choose_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When would you like your meeting to be scheduled?"
                    android:textSize="18dp"
                    android:textColor="#637e96"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"></TextView>

                <TextView
                    android:id="@+id/text1"
                    android:layout_below="@id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose a date"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#637e96"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"></TextView>

                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_below="@id/text1"
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:layerType="software"
                    app:neomorph_background_color="#BCDBEF"
                    app:neomorph_corner_radius="5dp"
                    app:neomorph_elevation="5dp"
                    app:neomorph_highlight_color="#fff"
                    app:neomorph_shadow_color="#408AB1"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="rectangular"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/select_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="select Date"
                        android:textColorHint="#9EC4D9"
                        android:inputType="none"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="#001D3B"
                        android:focusableInTouchMode="false"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal|center_vertical"></EditText>

                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            </RelativeLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/card2"
            android:layout_below="@id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layerType="software"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="5dp"
            app:neomorph_corner_radius="10dp"
            app:neomorph_background_color="#BCDBEF"
            app:neomorph_shadow_color="#408AB1"
            app:neomorph_highlight_color="#fff"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg">

                <TextView
                    android:id="@+id/choose_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meeting Time"
                    android:textColor="#2F5373"
                    android:textSize="25dp"
                    android:fontFamily="@font/clearsans_bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"></TextView>

                <TextView
                    android:id="@+id/text2"
                    android:layout_below="@id/choose_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At what time should the expert arrive?"
                    android:textSize="18dp"
                    android:textColor="#637e96"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="25dp"></TextView>

                <TextView
                    android:id="@+id/text3"
                    android:layout_below="@id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose a time"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#637e96"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"></TextView>

                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_below="@id/text3"
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:layerType="software"
                    app:neomorph_background_color="#BCDBEF"
                    app:neomorph_corner_radius="5dp"
                    app:neomorph_elevation="5dp"
                    app:neomorph_highlight_color="#fff"
                    app:neomorph_shadow_color="#408AB1"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="rectangular"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/select_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="select Time"
                        android:textColorHint="#9EC4D9"
                        android:inputType="none"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="#001D3B"
                        android:focusableInTouchMode="false"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal|center_vertical"></EditText>

                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            </RelativeLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_below="@id/card2"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layerType="software"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="12dp"
            app:neomorph_corner_radius="32dp"
            app:neomorph_background_color="#fff"
            app:neomorph_shadow_color="#408AB1"
            app:neomorph_highlight_color="#fff"
            android:layout_marginVertical="30dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/proceedtopay_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_bg"
                android:text="Proceed to Pay"
                android:textAllCaps="false"
                android:textColor="#2F5373"
                android:textStyle="normal"
                android:textSize="17dp"></Button>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    </RelativeLayout>
</ScrollView>

